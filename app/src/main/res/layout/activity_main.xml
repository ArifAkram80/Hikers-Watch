<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context="com.example.user.hikerswatch.MainActivity">

    <TextView
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="10.00"
        android:textAlignment="center"
        android:textColor="#9718ff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SpeedOmeter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="10.00"
        android:textAlignment="center"
        android:textColor="#ff189f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/ButtonFrag"
        class="com.example.user.hikerswatch.Button_Frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <FrameLayout
        android:id="@+id/FragMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="66.666666"/>


</LinearLayout>
